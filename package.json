{
  "name": "backend-rest-api",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "lint": "eslint --cache --cache-location .eslintcache --no-error-on-unmatched-pattern \"services/*/{src,test}/**/*.ts\" \"libs/*/{src,test}/**/*.ts\"",
    "build": "npm run -ws build --if-present",
    "pretest": "npm run lint && tsc -b services/user-service services/todo-service --noEmit",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "npm run --workspaces test:unit --if-present",
    "test:e2e": "npm run --workspaces test:e2e --if-present",
    "test:cov": "npm run --workspaces test:cov --if-present",
    "test:watch": "npm run --workspaces test:watch --if-present",
    "posttest": "npm run format",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\"",
    "reports:clean": "rimraf reports",
    "reports:mkdir": "node -e \"require('fs').mkdirSync('reports/coverage', { recursive: true })\"",
    "reports:copy:html": "cpy services/*/reports/html/** reports --cwd=. --parents",
    "reports:copy:cov": "cpy services/*/reports/coverage/** reports/coverage --cwd=. --parents",
    "reports:index": "node -e \"const fs=require('fs');const links=[{t:'User Service – HTML Report',p:'services/user-service/reports/html/index.html'},{t:'Todo Service – HTML Report',p:'services/todo-service/reports/html/index.html'},{t:'User Service – Coverage',p:'coverage/services/user-service/reports/coverage/index.html'},{t:'Todo Service – Coverage',p:'coverage/services/todo-service/reports/coverage/index.html'}];const html=`<!doctype html><meta charset=utf-8><title>Test Reports</title><style>body{font-family:sans-serif;margin:40px}ul{line-height:1.8}</style><h1>Test Reports</h1><ul>${links.map(l=>`<li><a href='${l.p}'>${l.t}</a></li>`).join('')}</ul>`;fs.writeFileSync('reports/index.html',html);\"",
    "reports:collect": "npm-run-all reports:clean reports:mkdir reports:copy:html reports:copy:cov reports:index",
    "reports:open": "npx http-server ./reports -p 8080 -o"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@prisma/client": "^6.13.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/node": "^24.2.0",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "cpy-cli": "^6.0.0",
    "eslint": "^9.32.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "joi": "^18.0.0"
  }
}